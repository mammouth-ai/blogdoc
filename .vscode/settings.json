{
  "files.exclude": {
    // HIDDING configuration files from the left panel, comment a line if you want to see it:
    "**/node_modules": true,
    "package.json": false,
    "package-lock.json": true,
    ".gitignore": true,
    // commit hooks:
    ".lefthook.yml": true,
    // for infisical secret scanning during pre-commit:
    "secrets-scan.js": true,
    "baseline-report.json": true // we ignore secrets leaked that are in this json
  },
  "search.useParentIgnoreFiles": false,
  "terminal.integrated.profiles.windows": {
    "Git Bash": { "path": "C:\\Program Files\\Git\\bin\\bash.exe" }
  },
  "terminal.integrated.defaultProfile.windows": "Git Bash"
}
