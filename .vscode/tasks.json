{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run project on open",
      "type": "shell",
      "command": "npm run docs:dev",
      "windows": {
        "command": "npm run docs:dev"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Open Localhost URL",
      "command": "${input:openSimpleBrowser}",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "runOptions": {
        "runOn": "folderOpen",
        "instanceLimit": 1
      }
    }
  ],
  "inputs": [
    {
      "id": "openSimpleBrowser",
      "type": "command",
      "command": "simpleBrowser.show",
      "args": ["http://localhost:5173"]
    }
  ]
}
